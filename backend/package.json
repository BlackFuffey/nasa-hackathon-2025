    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@tsconfig/recommended": "^1.0.10",
        "@types/express": "^5.0.3",
        "@types/node": "^24.6.2",
        "as-bind": "^0.8.2",
        "assemblyscript": "^0.28.8",
        "chokidar-cli": "^3.0.0",
        "concurrently": "^9.2.1",
        "esbuild": "^0.25.10",
        "eslint": "^9.37.0",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.45.0"
    },
    "dependencies": {
        "@assemblyscript/loader": "^0.28.8",
        "express": "^5.1.0"
    }
}